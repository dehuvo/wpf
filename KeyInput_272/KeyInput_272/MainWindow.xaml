<Window x:Class="KeyInput_272.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyInput_272"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
  <StackPanel>
    <TextBox Name="txt1" Height="30" Width ="100" IsEnabled="True"
             Focusable="True" KeyDown="txt1_KeyDown"/>
    <TextBox Name="txt2" Height="30" Width ="100" IsEnabled="True"
             Focusable="True" PreviewKeyDown="txt2_PreviewKeyDown"
             PreviewTextInput="txt2_PreviewTextInput"/>
  </StackPanel>
</Window>