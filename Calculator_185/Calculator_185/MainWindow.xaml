<Window x:Class="Calculator_185.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Calculator"
        Title="WPF Calculator" Height="350" Width="270">
  <Window.Resources>
    <local:Calculator x:Key="calculator"/>
  </Window.Resources>
  <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid.Resources>
      <Style TargetType="{x:Type Button}">
        <Setter Property="Control.FontSize" Value="20" />
        <Setter Property="Control.FontWeight" Value="Bold" />
      </Style>
    </Grid.Resources>
    <Grid.RowDefinitions>
      <RowDefinition Height="60" />
      <RowDefinition Height="60" />
      <RowDefinition Height="60" />
      <RowDefinition Height="60" />
      <RowDefinition Height="60" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="60" />
      <ColumnDefinition Width="60" />
      <ColumnDefinition Width="60" />
      <ColumnDefinition Width="60" />
    </Grid.ColumnDefinitions>
    <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="120" />
        <ColumnDefinition Width="50*" />
        <ColumnDefinition Width="50*" />
      </Grid.ColumnDefinitions>
      <Border BorderThickness="1" BorderBrush="Black">
        <TextBlock FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"
          Text="{Binding DisplayText,Source={StaticResource calculator}}" />
      </Border>
      <Button Command="{Binding Backspace,Source={StaticResource calculator}}"
        Content="Back" Grid.Column="1" />
      <Button Command="{Binding Clear,Source={StaticResource calculator}}"
        Content="Clear" Grid.Column="2" />
    </Grid>
    <Button Command="{Binding Append,Source={StaticResource calculator}}"
      Content="1" CommandParameter="1" Grid.Row="1" Grid.Column="0" />
    <Button Command="{Binding Append,Source={StaticResource calculator}}"
      Content="2" CommandParameter="2" Grid.Row="1" Grid.Column="1" />
    <Button Command="{Binding Append,Source={StaticResource calculator}}"
      Content="3" CommandParameter="3" Grid.Row="1" Grid.Column="2" />
    <Button Command="{Binding Operator,Source={StaticResource calculator}}"
      Content="+" CommandParameter="+" Grid.Row="1" Grid.Column="3" />
    <Button Command="{Binding Append,Source={StaticResource calculator}}"
      Content="4" CommandParameter="4" Grid.Row="2" Grid.Column="0" />
    <Button Command="{Binding Append,Source={StaticResource calculator}}"
      Content="5" CommandParameter="5" Grid.Row="2" Grid.Column="1" />
    <Button Command="{Binding Append,Source={StaticResource calculator}}"
      Content="6" CommandParameter="6" Grid.Row="2" Grid.Column="2" />
    <Button Command="{Binding Operator,Source={StaticResource calculator}}"
      CommandParameter="-" Grid.Row="2" Grid.Column="3">&#x2212;</Button>
    <Button Command="{Binding Append,Source={StaticResource calculator}}"
      Content="7" CommandParameter="7" Grid.Row="3" Grid.Column="0" />
    <Button Content="8" CommandParameter="8" Grid.Row="3" Grid.Column="1"
      Command="{Binding Append,Source={StaticResource calculator}}" />
    <Button Content="9" CommandParameter="9" Grid.Row="3" Grid.Column="2"
      Command="{Binding Append,Source={StaticResource calculator}}" />
    <Button Command="{Binding Operator,Source={StaticResource calculator}}"
      CommandParameter="*" Grid.Row="3" Grid.Column="3">&#x00D7;</Button>
    <Button Command="{Binding Append,Source={StaticResource calculator}}"
      Content="0" CommandParameter="0" Grid.Row="4" Grid.Column="0" />
    <Button Command="{Binding Append,Source={StaticResource calculator}}"
      Content="." CommandParameter="." Grid.Row="4" Grid.Column="1" />
    <Button Command="{Binding Calculate,Source={StaticResource calculator}}"
      Content="=" CommandParameter="=" Grid.Row="4" Grid.Column="2" />
    <Button Command="{Binding Operator,Source={StaticResource calculator}}"
      CommandParameter="/" Grid.Row="4" Grid.Column="3">&#x00F7;</Button>
  </Grid>
</Window>